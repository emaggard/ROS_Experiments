<?xml version="1.0"?>
<robot name="SID Development">

  <xacro:property name="width" value=".15" />
  <xacro:property name="bodylen" value=".26" />
  <xacro:property name="wheelrad" value=".05" />
  <xacro:property name="wheelaxis" value=".18" />
  <xacro:property name="pi" value="3.1415" />

  <material name="blue">
    <color rgba="0 0 .8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="${bodylen}" radius="${width}"/>
      </geometry>
      <material name="black"/>
      <origin rpy="0 0 0" xyz="0 0 0.16"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.26" radius="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="4"/>
      <inertia ixx="0.2" ixy="0.0" ixz="0.0" iyy="0.2" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_right_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.18 0 0.05"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <axis rpy="0 0 0" xyz="1 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin rpy="0 0 0" xyz="0.18 0 0.05"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_left_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.18 0 0.05"/>
  </joint>

  <joint name="left_wheel_joint" type="continuous">
    <axis rpy="0 0 0" xyz="1 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin rpy="0 0 0" xyz="-0.18 0 0.05"/>
  </joint>

   <link name="base_lidar">
    <visual>
     <geometry>
        <box size="0.1 .1 .05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>

  <joint name="base_to_lidar" type="fixed">
    <parent link="base_link"/>
    <child link="base_lidar"/>
    <origin xyz="-0.05 0 0.35"/>
  </joint>

  <link name="base_camera">
    <visual>
      <geometry>
        <box size="0.1 .03 .03"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>

  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="base_camera"/>
    <origin xyz="0 0.15 0.3"/>
  </joint>

</robot>
